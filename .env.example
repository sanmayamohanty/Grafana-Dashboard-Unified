# Grafana Configuration
# ====================

# Admin credentials (CHANGE THESE!)
GF_SECURITY_ADMIN_USER=superadmin
GF_SECURITY_ADMIN_PASSWORD=your-secure-password-here

# Server configuration
GF_SERVER_ROOT_URL=https://your-grafana.railway.app

# Security settings
GF_USERS_ALLOW_SIGN_UP=false
GF_USERS_ALLOW_ORG_CREATE=false
GF_AUTH_ANONYMOUS_ENABLED=false
GF_AUTH_DISABLE_LOGIN_FORM=false

# Multi-org settings
GF_USERS_AUTO_ASSIGN_ORG=false
GF_USERS_AUTO_ASSIGN_ORG_ID=1

# Cookie/Session security
GF_SECURITY_COOKIE_SECURE=true
GF_SECURITY_STRICT_TRANSPORT_SECURITY=true
GF_SECURITY_X_CONTENT_TYPE_OPTIONS=true
GF_SECURITY_X_XSS_PROTECTION=true

# Default PostgreSQL (for Main Org admin use)
DEFAULT_PG_HOST=localhost
DEFAULT_PG_DATABASE=grafana
DEFAULT_PG_USER=grafana
DEFAULT_PG_PASSWORD=grafana

# ================================================
